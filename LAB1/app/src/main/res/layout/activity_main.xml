<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="10"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity">

    <TextView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:background="#EAFF00"
        android:text="@string/android_text"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textColor="#E91E63"
        android:textSize="30sp"/>

    <TextView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:background="#05D8FF"
        android:text="@string/PHP_text"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textColor="#E91E63"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:background="#06A875"
        android:text="@string/SQL_text"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textColor="#DFFF08"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#EDB909"
        android:text="@string/python_text"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textColor="#03978C"
        android:textSize="30sp"/>

</LinearLayout>